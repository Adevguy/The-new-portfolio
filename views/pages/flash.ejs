<style>
  .flash {
    width: 50%;
    margin: 200px auto;
    padding: 10px;
    text-align: center;
    font-weight: bolder;
    font-size: xx-large;
    border-radius: 30px;
    z-index: 10;
    position: absolute;
  }
  .success-flash {
    background-color: green;
  }
  .error-flash {
    background-color: red;
  }
  .hide-flash {
    transition: 1s ease all;
}

.hide-flash {
    opacity: 0;
}
  @media (max-width:919px) {
    .flash {
        width: 80%;
        margin-left: 30px;
    }
  }
</style>
<%if(success.length) {%>
    <div class="success-flash flash">
        <p><%=success%></p>
      </div>
<%}%>
<%if(error.length){%>
    <div class="error-flash flash">
        <p><%=error%></p>
    </div>
<%}%>
<script>
    const allFlashes = document.querySelectorAll(".flash")

allFlashes.forEach(flash => {
    setTimeout(() => {
        flash.classList.add("hide-flash")
    }, 4000);
    setTimeout(() => {
        flash.remove()
    }, 4500);
})

</script>